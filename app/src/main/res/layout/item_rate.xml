<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rates_list_item_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                tools:text="USD" />

            <TextView
                android:alpha="0.5"
                android:id="@+id/rates_list_item_description"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                tools:text="Доллар США" />

        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_sell"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rates_list_item_sell_rate"
            app:srcCompat="@drawable/green_arrow_up" />

        <TextView
            android:id="@+id/rates_list_item_sell_rate"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginEnd="112dp"
            android:layout_width="wrap_content"
            tools:text="65.43" />

        <ImageView
            android:id="@+id/arrow_buy"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rates_list_item_buy_rate"
            app:srcCompat="@drawable/red_arrow_down" />

        <TextView
            android:id="@+id/rates_list_item_buy_rate"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="68.14" />
    </RelativeLayout>

</LinearLayout>